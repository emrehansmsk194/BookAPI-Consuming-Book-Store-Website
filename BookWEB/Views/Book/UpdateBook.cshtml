
@model BookWEB.Models.VM.BookUpdateVM

<form asp-action="UpdateBook">
	<br />
	<div class="container border p-3">
		<h1 class="text-primary text-center pt-2">Update Book</h1>
		<hr />
		<input hidden asp-for="Book.Id" />
		<div class="row">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="col-2">
				<label asp-for="Book.Id" class="control-label pt-2 bg-light" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input disabled asp-for="Book.Id" class="form-control bg-secondary" />
				<span asp-validation-for="Book.Id" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label asp-for="Book.Name" class="control-label pt-2 bg-light" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Book.Name" class="form-control bg-secondary" />
				<span asp-validation-for="Book.Name" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="Book.PageCount" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Book.PageCount" class="form-control bg-secondary" />
				<span asp-validation-for="Book.PageCount" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label asp-for="Book.Language" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<select asp-for="Book.Language" class="form-select bg-secondary">
					<option>Turkish</option>
					<option>English</option>
				</select>
			</div>
			<div class="col-2">
				<label asp-for="Book.CoverImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Book.CoverImageUrl" class="form-control bg-secondary"/>
				<span asp-validation-for="Book.CoverImageUrl" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label asp-for="Book.Price" class="control-label pt-2 " style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Book.Price" class="form-control bg-secondary" />
				<span asp-validation-for="Book.Price" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label asp-for="Book.CategoryId" class="control-label pt-2" style="font-size:20px;">Category</label>
			</div>
			<div class="col-10 pb-3">
				<select asp-for="Book.CategoryId" class="form-select bg-secondary" asp-items="@Model.CategoryList">
					<option selected> --SelectCategory-- </option>
				</select>
			</div>
			<div class="col-2">
				<label asp-for="Book.PublisherId" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Book.PublisherId" class="form-control bg-secondary" />
				<span asp-validation-for="Book.PublisherId" class="text-danger"></span>
			</div>
			<div class="col-5 offset-2">
				<a asp-action="IndexBook" asp-controller="Book" class="btn-primary btn form-control ">Back to List</a>
			</div>
			<div class="col-5">
				<input type="submit" value="Update" class="btn btn-success form-control" />
			</div>
		</div>
	</div>

</form>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}